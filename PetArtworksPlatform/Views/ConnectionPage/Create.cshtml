@model PetArtworksPlatform.Models.ViewModels.ConnectionCreateViewModel

<h2>Create New Connection</h2>

<form asp-action="Create" method="post">
    @if (Model.IsAdmin)
    {
        <div class="form-group">
            <label for="followerId">Follower (Admin choose on behalf):</label>
            <select class="form-control" name="followerId">
                @foreach (var member in Model.AllMembers)
                {
                    <option value="@member.MemberId">@member.MemberName</option>
                }
            </select>
        </div>
    }

    <div class="form-group">
        <label for="followingId">User to Follow:</label>
        <select class="form-control" name="followingId">
            @foreach (var user in Model.AvailableUsers)
            {
                <option value="@user.MemberId">@user.MemberName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Follow</button>
</form>
