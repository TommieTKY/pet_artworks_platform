@model PetArtworksPlatform.Models.ArtworkItemDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Delete</h1>

<h3>Are you sure you want to delete this artwork?</h3>
<div>
    <h4>@Model.ArtworkTitle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtworkTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtworkTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtworkMedium)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtworkMedium)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtworkYearCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtworkYearCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistID)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.ArtworkId">
        <input type="hidden" asp-for="ArtworkId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </form>
</div>



