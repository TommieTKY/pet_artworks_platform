@model PetArtworksPlatform.Models.ArtistPersonDto

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Artist</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-id="@Model.ArtistId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtistId" />
            <div class="form-group mb-4">
                <label asp-for="ArtistName" class="control-label"></label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ArtistBiography" class="control-label"></label>
                <textarea asp-for="ArtistBiography" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="ArtistBiography" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" class="btn btn-secondary">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
