@model PetArtworksPlatform.Models.ArtistPersonDto

@{
    ViewData["Title"] = "Artist Profile";
}

<h1 class="mb-4">@Model.ArtistName</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Artist Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ArtistName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ArtistName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ArtistBiography)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ArtistBiography)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" class="btn btn-warning">Edit</a>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Artworks</h4>
        <hr />
        <ul>
            @foreach (var artwork in Model?.ListArtworks ?? [])
            {
                <li class="my-2">
                    <a href="/ArtworkPage/Details/@artwork.ArtworkId">@artwork.ArtworkTitle</a>
                </li>
            }
        </ul>
        <div class="mt-4">
            <a asp-area="" asp-controller="ArtworkPage" asp-action="New" class="btn btn-success">Add New Artwork</a>
        </div>
    </div>
</div>


