@model PetArtworksPlatform.Models.FollowersAndFollowingConnection

@{
    ViewData["Title"] = "Followers and Following";
}

<div class="container">
    <h1>@Model.MemberName - Connections</h1>

    <h2>Followers</h2>
    <ul>
        @foreach (var follower in Model.Followers)
        {
            <li>@follower.MemberName (ID: @follower.MemberId)</li>
        }
    </ul>

    <h2>Following</h2>
    <ul>
        @foreach (var following in Model.Following)
        {
            <li>@following.MemberName (ID: @following.MemberId)</li>
        }
    </ul>

    <div class="mt-3">
        <a href="/ConnectionPage/Create" class="btn btn-primary">Create New Connection</a>
        <a asp-action="Details" asp-route-id="@Model.MemberId" class="btn btn-secondary">Back to Details</a>
    </div>
</div>