@model PetArtworksPlatform.Models.ExhibitionItemDto

@{
    ViewData["Title"] = "New Exhibition";
}

<h1>New Exhibition</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="ExhibitionTitle" class="control-label"></label>
                <input asp-for="ExhibitionTitle" class="form-control" />
                <span asp-validation-for="ExhibitionTitle" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ExhibitionDescription" class="control-label"></label>
                <textarea asp-for="ExhibitionDescription" class="form-control mce" rows="4" cols="50"></textarea>
                <span asp-validation-for="ExhibitionDescription" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


