@model PetArtworksPlatform.Models.ArtistPersonDto

@{
    ViewData["Title"] = "New Artist";
}

<h1>New Artist</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="ArtistName" class="control-label"></label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ArtistBiography" class="control-label"></label>
                <textarea asp-for="ArtistBiography" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="ArtistBiography" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
