@model PetArtworksPlatform.Models.ArtistPersonDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Delete</h1>

<h3>Are you sure you want to delete this artist?</h3>
<div>
    <h4>@Model.ArtistName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistBiography)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistBiography)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.ArtistId">
        <input type="hidden" asp-for="ArtistId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </form>
</div>
